<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <local:_Mike_s_Video_StoreDataSet x:Key="_Mike_s_Video_StoreDataSet"/>
        <CollectionViewSource x:Key="CategoriesViewSource" Source="{Binding Categories, Source={StaticResource _Mike_s_Video_StoreDataSet}}"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource CategoriesViewSource}">
        <DataGrid x:Name="CategoriesDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="89,95,28,24" RowDetailsVisibilityMode="VisibleWhenSelected">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="Cat_NumberColumn" Binding="{Binding cat_Number}" Header="cat Number" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="Cat_NameColumn" Binding="{Binding cat_Name}" Header="cat Name" Width="SizeToHeader"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
